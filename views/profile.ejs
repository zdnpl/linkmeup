<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= user.name %> | LinkMeUp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/styles.css" rel="stylesheet" />
    <style>
      <% if (user.theme) { %>
        body {
          background-color: <%= user.theme.bgColor %>;
          color: <%= user.theme.fontColor %>;
        }
        .link-btn {
          background-color: <%= user.theme.buttonColor %>;
          border-color: <%= user.theme.buttonColor %>;
          color: <%= user.theme.fontColor %>;
        }
      <% } %>
    </style>
  </head>
  <body>
    <div class="container py-5">
      <div class="text-center mb-4">
        <img src="<%= user.profilePic %>" alt="<%= user.name %>'s profile picture" class="profile-pic" width="150" height="150" />
        <p class="mt-3 username">@<%= user.name %></p>
        <p class="mt-2"><%= user.bio %></p>
      </div>
      <div class="list-group text-center">
        <% user.links.forEach(function(link) { %>
        <a href="<%= link.url %>" class="link-btn shadow-sm"><%= link.name %></a>
        <% }); %>
      </div>
    </div>
    <!-- Floating Navbar -->
    <a href="http://localhost:3000/" class="floating-link text-center">
      <span>Make Yours Now | Powered by Jodan</span>
    </a>
    <style></style>
  </body>
</html>
